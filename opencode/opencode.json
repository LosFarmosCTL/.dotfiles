{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "permission": {
    "bash": {
      "*": "ask",
      "git status": "allow",
      "git diff *": "allow",
      "git show *": "allow",
      "git log *": "allow",
      "git branch *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "tree *": "allow",
      "wc *": "allow",
      "ack *": "allow",
      "echo *": "allow"
    }
  },
  "formatter": {
    "swift-format": {
      "command": ["swift", "format", "-i", "$FILE"],
      "extensions": [".swift"]
    }
  }
}
