command = "/opt/homebrew/bin/fish"
theme = "tokyonight"

font-size = 12
font-family = "ComicCodeLigatures Nerd Font"
font-family-bold = "ComicCodeLigatures Nerd Font Bold"
font-family-italic = "ComicCodeLigatures Nerd Font Italic"
font-family-bold-italic = "ComicCodeLigatures Nerd Font Bold Italic"
window-title-font-family = "SFProDisplay Nerd Font"

# use combined tab- and titlebar
macos-titlebar-style = tabs

# maximize window on launch
window-height = 1000
window-width = 1000

# configure quake-style qick terminal
keybind = global:ctrl+enter=toggle_quick_terminal
quick-terminal-position = bottom
quick-terminal-autohide = false

# open new tabs inside of the same directory as the current one
window-inherit-working-directory = true

# use custom shortcuts for german accent characters
keybind = opt+u>u=text:ü
keybind = opt+u>a=text:ä
keybind = opt+u>o=text:ö
keybind = opt+u>shift+u=text:Ü
keybind = opt+u>shift+a=text:Ä
keybind = opt+u>shift+o=text:Ö
keybind = opt+shift+2=text:€

# move threw prompts using vi style keybinding
keybind = cmd+j=jump_to_prompt:1
keybind = cmd+k=jump_to_prompt:-1

# disable prompt cursor shell integration, doesn't play nice with fish vi mode
shell-integration-features = no-cursor

# hide mouse cursor while typing
mouse-hide-while-typing = true
